<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.healthease.controllers.HealthTipsController"
      alignment="TOP_LEFT" spacing="12">

    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <Label text="Health Tips" style="-fx-font-size: 22; -fx-font-weight: bold;"/>

    <HBox spacing="8" alignment="CENTER_LEFT">
        <Label text="Category:"/>
        <ComboBox fx:id="categoryCombo" prefWidth="260"/>
    </HBox>

    <SplitPane dividerPositions="0.4">
        <items>
            <VBox spacing="6">
                <Label text="Questions" style="-fx-font-weight: bold;"/>
                <ListView fx:id="questionList" VBox.vgrow="ALWAYS"/>
            </VBox>
            <VBox spacing="6">
                <Label text="Answer" style="-fx-font-weight: bold;"/>
                <TextArea fx:id="answerArea" wrapText="true" editable="false" prefHeight="400" VBox.vgrow="ALWAYS"
                          promptText="Select a question to see the answer."/>
            </VBox>
        </items>
    </SplitPane>

    
</VBox>