<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="404.0" prefWidth="800.0" style="-fx-background-color: #f7f9fb;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.healthease.controllers.LoginController">
   <!-- Header -->
   <Rectangle arcHeight="8" arcWidth="8" fill="#50C878" height="100" width="800.0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" />
   <Text fill="WHITE" layoutX="285.0" layoutY="64.0" text="HealthEase">
      <font><Font name="Eras Demi ITC" size="43.0" /></font>
   </Text>

   <!-- Card -->
   <VBox spacing="12" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0.1, 0, 2);" AnchorPane.leftAnchor="220" AnchorPane.rightAnchor="220" AnchorPane.topAnchor="140">
      <Text style="-fx-fill: #2F855A;" text="Welcome back">
         <font><Font size="20" /></font>
      </Text>
      <TextField fx:id="usernameField" promptText="Username" />
      <PasswordField fx:id="passwordField" promptText="Password" />
      <Button fx:id="loginButton" onAction="#handleLogin" style="-fx-background-color: #50C878; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Log In" />
      <HBox alignment="CENTER_RIGHT" spacing="10">
         <Button fx:id="forgotPasswordButton" onAction="#handleForgotPassword" style="-fx-background-color: transparent; -fx-text-fill: #50C878; -fx-underline: true;" text="Forgot Password?" />
         <Button fx:id="createAccountButton" onAction="#handleCreateAccount" style="-fx-background-color: white; -fx-text-fill: #50C878; -fx-background-radius: 8;" text="Create Account" />
      </HBox>
   </VBox>
</AnchorPane>
