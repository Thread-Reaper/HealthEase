<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.healthease.controllers.GymPlanController"
            prefHeight="600" prefWidth="900" style="-fx-background-color: #f7f9fb;">
    <Rectangle arcHeight="8" arcWidth="8" fill="#50C878" height="100" width="1000"/>
    <Text fill="WHITE" layoutX="20" layoutY="60" style="-fx-font-size: 28;" text="Gym Planning"/>

    <VBox AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="120" spacing="16" prefWidth="860"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0.1, 0, 2);">
        <Label text="Create Your Gym Plan:" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2F855A;"/>

        <GridPane hgap="12" vgap="12">
            <columnConstraints>
                <ColumnConstraints prefWidth="180"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Fitness Level:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="fitnessLevelCombo" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="220"/>

            <Label text="Goal:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="goalCombo" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="220"/>

            <Label text="Session Duration:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="timeCombo" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="220"/>
        </GridPane>

        <Button fx:id="generateButton" text="Generate Plan"
                style="-fx-background-color: #50C878; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
        <Label fx:id="resultLabel" style="-fx-font-weight: bold;"/>

        <Label text="Your Custom Gym Plan:" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="planTextArea" prefHeight="250" wrapText="true" editable="false"
                  style="-fx-background-color: #fafafa; -fx-background-radius: 10; -fx-border-color: #e6e6e6; -fx-border-radius: 10;"/>
    </VBox>
</AnchorPane>
