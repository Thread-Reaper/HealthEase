<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.healthease.controllers.ProfileController"
            prefHeight="600" prefWidth="800" style="-fx-background-color: #f7f9fb;">

    <Rectangle arcHeight="8" arcWidth="8" fill="#50C878" height="100" width="1000"/>
    <Text fill="WHITE" layoutX="20" layoutY="60" style="-fx-font-size: 28;" text="My Profile"/>

    <VBox spacing="16" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="120"
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0.1, 0, 2);">
        <!-- Current info labels -->
        <Label fx:id="usernameLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <Label fx:id="emailLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <Label fx:id="roleLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

        <Separator/>

        <!-- Editable profile fields -->
        <Label text="Edit Profile" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
            </rowConstraints>
            <children>
                <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField" promptText="Enter name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Email" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" promptText="Enter email" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <HBox alignment="CENTER_RIGHT">
            <Button text="Save Profile" onAction="#handleSaveProfile"
                    style="-fx-background-color: #50C878; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
        </HBox>

        <Separator/>

        <!-- Change password section -->
        <Label text="Change Password" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
            </rowConstraints>
            <children>
                <Label text="Current Password" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <PasswordField fx:id="currentPasswordField" promptText="Current password" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="New Password" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="newPasswordField" promptText="New password" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <HBox alignment="CENTER_RIGHT">
            <Button text="Change Password" onAction="#handleChangePassword"
                    style="-fx-background-color: #50C878; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Close" onAction="#handleBack"
                    style="-fx-background-color: #50C878; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"/>
        </HBox>
    </VBox>
</AnchorPane> 



