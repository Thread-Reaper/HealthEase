<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.healthease.controllers.CheckHealthController"
            style="-fx-background-color: #f7f9fb;">
    <!-- Header -->
    <Rectangle arcHeight="8" arcWidth="8" fill="#50C878" height="80" width="1000" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" />
    <Text text="Check Your Health" fill="white" layoutX="24" layoutY="48">
        <font><Font size="24"/></font>
    </Text>

    <!-- Card -->
    <VBox spacing="16" prefWidth="760" AnchorPane.topAnchor="96" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20"
          style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0.1, 0, 2);">

        <GridPane hgap="12" vgap="12">
            <columnConstraints>
                <ColumnConstraints minWidth="140"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Age" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="ageField" promptText="e.g. 25" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Weight (kg)" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="weightField" promptText="e.g. 70" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Height (cm)" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="heightField" promptText="e.g. 175" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>

        <HBox alignment="CENTER_RIGHT">
            <Button text="Evaluate" onAction="#evaluateHealth"
                    style="-fx-background-color: #50C878; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-padding: 8 16;"/>
        </HBox>

        <TextArea fx:id="resultArea" editable="false" wrapText="true" prefHeight="220"
                  style="-fx-background-color: #fafafa; -fx-background-radius: 10; -fx-border-color: #e6e6e6; -fx-border-radius: 10;" />
    </VBox>
</AnchorPane>
